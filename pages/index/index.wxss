.index {
  width: 90%;
  margin: 0px auto;
}
.index-add {
  width: 22px;
  height: 22px;
  position: absolute;
  right: 25px;
}
.index-info-img {
  display: inline-block;
}

.index-info {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: inline-block;
}

.index-equipment {
  display: inline-block;
  position: relative;
  top: -60px;
  left: 62px;
  color: #343434;
  font-size: 18px;
  font-weight: 700;
}

.index-connect {
  width: 120px;
  height: 25px;
  background-color: #DEDEDE;
  color: #fff;
  border-radius: 15px;
  line-height: 25px;
  margin: -40px 0  5px 65px;
}
.index-connect-text{
  height: 25px;
  line-height: 25px;
  display: inline-block;
}
.indx-round-red {
  display: inline-block;
  width: 7px;
  height: 7px;
  background-color: #FE3A4A;
  border-radius: 50%;
  margin: 2px 7px;
}

.indx-round-green {
  display: inline-block;
  width: 7px;
  height: 7px;
  background-color: #00FF00;
  border-radius: 50%;
  margin: 2px 7px;
}
.index-notice {
  margin: 10px 0;
  color: #FFBA4D;
  font-size: 14px;
}
.index-notice-img {
  width: 15px;
  height: 15px;
  margin-right: 3px;
  position: relative;
  top: 2px;
}
